# Open browser
"chromium"
    XF86HomePage

# Sleep button
"systemctl suspend"
    XF86Sleep

# Take a screenshot
"scrot ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png"
    Print

# Toggle between play and pause
"playerctl play-pause"
    XF86AudioPlay

# Mute audio
"pamixer --toggle-mute"
    XF86AudioMute

# Increase volume
"pamixer --increase 5"
    XF86AudioRaiseVolume

# Decrease volume
"pamixer --decrease 5"
    XF86AudioLowerVolume

# Paste from selection buffer
"xte "mouseclick 2"
    Mod4 + p

# Open calculator
"urxvt -e bc"
    XF86Calculator

# Open GMail
"chromium https://www.gmail.com"
    XF86Mail
