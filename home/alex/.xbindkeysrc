# Open browser
"firefox"
    XF86HomePage

# Sleep button
"systemctl suspend"
    XF86Sleep

# Take a screenshot
"scrot ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png"
    Print

# Toggle between play and pause for cmus player
"cmus-remote --pause"
    XF86AudioPlay

# Mute audio
"pamixer --toggle-mute"
    XF86AudioMute

# Increase volume
"pamixer --increase 5"
    XF86AudioRaiseVolume

# Decrease volume
"pamixer --decrease 5"
    XF86AudioLowerVolume

# Open calculator
"urxvt -e bc"
    XF86Calculator

# Open GMail
"urxvt -e mutt"
    XF86Mail

# Swtich to hebrew layout
"setxkbmap -layout us,il -option grp:alt_shift_toggle"
    Shift + F1

# Switch to russian layout
"setxkbmap -layout us,ru -option grp:alt_shift_toggle"
    Shift + F3

# Swtich to arab layout
"setxkbmap -layout us,ar -option grp:alt_shift_toggle"
    Shift + F4

# Swtich to slovak layout
"setxkbmap -layout us,sk -option grp:alt_shift_toggle"
    Shift + F5

