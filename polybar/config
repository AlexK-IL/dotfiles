[colors]
background = #B0000000
foreground = ${xrdb:color7:#222}
focused = ${xrdb:color2:#ffffff}
unfocused = ${xrdb:color0:#ffffff}
urgent = ${xrdb:color4:#bd2c40}

[bar/top]
width = 100%
height = 27
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-top-size = 8
border-left-size = 8
border-right-size = 8
border-color = #00000000

padding = 2

module-margin-left = 1
module-margin-right = 2

font-0 = xos4Terminus:pixelsize=14;0
font-1 = FontAwesome:pixelsize=14;0

modules-left = date
modules-center =
modules-right = fs-arch fs-windows fs-data volume xkeyboard temperature powermenu

tray-position = right
tray-background = ${colors.background}
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

[bar/bottom]
bottom = true
width = 100%
height = 27
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-bottom-size = 8
border-left-size = 8
border-right-size = 8
border-color = #00000000

font-0 = xos4Terminus:pixelsize=14;0

modules-left =
modules-center = i3
modules-right = 

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = caps lock
label-layout =   %layout%

[module/fs-arch]
type = internal/fs
interval = 25

mount-0 = /

label-mounted =  %used%/%total%
label-unmounted = not mounted

[module/fs-windows]
type = internal/fs
interval = 25

mount-0 = /mnt/windows10

label-mounted =  %used%/%total%
label-unmounted = not mounted

[module/fs-data]
type = internal/fs
interval = 25

mount-0 = /mnt/data

label-mounted =  %used%/%total%
label-unmounted = not mounted

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}
label-mode-padding = 2

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.focused}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-background = ${colors.unfocused}
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.urgent}
label-urgent-padding = 2

[module/date]
type = internal/date
interval = 1

date = " %d/%m/%Y"

time = %H:%M:%S

format-prefix = 

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = 
label-volume-foreground = ${root.foreground}

label-muted = 

bar-volume-width = 20
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature%
label-warn = %temperature%

ramp-0 = 
ramp-1 = 

[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 1

label-open =  
label-open-foreground = ${colors.urgent}
label-close = 
label-close-foreground = ${colors.foreground}
label-separator = |

menu-0-0 = "lock screen "
menu-0-0-exec = menu-open-1
menu-0-1 = suspend
menu-0-1-exec = menu-open-2
menu-0-2 = shutdown
menu-0-2-exec = menu-open-3
menu-0-3 = reboot
menu-0-3-exec = menu-open-4

menu-1-0 = "lock screen "
menu-1-0-exec = ~/.dotfiles/bin/lockscreen.sh
menu-1-1 = 
menu-1-1-exec = menu-open-0

menu-2-0 = suspend
menu-2-0-exec = ~/.dotfiles/bin/suspend.sh
menu-2-1 = 
menu-2-1-exec = menu-open-0

menu-3-0 = shutdown
menu-3-0-exec = sudo shutdown now
menu-3-1 = 
menu-3-1-exec = menu-open-0

menu-4-0 = reboot
menu-4-0-exec = sudo reboot
menu-4-1 = 
menu-4-1-exec = menu-open-0

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
